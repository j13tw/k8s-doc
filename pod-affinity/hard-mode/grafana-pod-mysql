apiVersion: v1
kind: Pod
metadata:
  name: grafana-pod-mysql
  labels:
    app: grafana
spec:
  affinity:
    podAffinity:
      requiredDuringSchedulingIgnoredDuringExecution:
      - labelSelector:
          matchExpressions:
          - key: app
            operator: In
            values:
            - mysql
  containers:
  - name: grafana
    image: grafana/grafana
