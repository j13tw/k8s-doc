apiVersion: v1
kind: Pod
metadata:
  name: grafana-pod-mongodb
  labels:
    app: grafana
spec:
  affinity:
    podAffinity:
      requiredDuringSchedulingIgnoredDuringExecution:
      -  podSelector:
          matchExpressions:
          - key: app
            operator: In
            values:
            - mongodb
  containers:
  - name: grafana
    image: grafana/grafana
